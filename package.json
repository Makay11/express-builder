    "test:watch": "jest --watch",
    "test": "jest --forceExit"
  },
  "jest": {
    "collectCoverage": true
  },
  "keywords": [
    "express",
    "router",
    "routes",
    "async",
    "middleware"
  ],
  "author": {
    "name": "Diogo Pais",
    "email": "dpais11@gmail.com",
    "url": "http://diogopais.com"
  },
  "repository": "github:Makay11/express-builder",
  "license": "ISC",
  "dependencies": {
    "micromatch": "^3.1.5"
  },
  "devDependencies": {
    "eslint": "^4.18.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-watch": "^3.1.3",
    "express": "^4.16.2",
    "jest": "^22.3.0",
    "nodemon": "1.18.5",
    "npm-run-all": "^4.1.2",
    "supertest": "^3.0.0"
  }
